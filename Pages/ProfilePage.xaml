<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemberCard.Pages.ProfilePage"
             Title="Profile">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Entry x:Name="NameEntry" Placeholder="Name"/>
        <Entry x:Name="CardEntry" Placeholder="Card Number"/>
        <Button Text="Save" Clicked="OnSave"/>
        <Button Text="Logout" BackgroundColor="{StaticResource AccentColor}" Clicked="OnLogout"/>
    </VerticalStackLayout>
</ContentPage>