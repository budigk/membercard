<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MemberCard.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MemberCard.Controls"
    Title="">

    <ContentPage.Resources>
        <!-- optional: masih boleh dipakai jika perlu -->
        <Style x:Key="ChipBorder" TargetType="Border">
            <Setter Property="StrokeThickness" Value="0" />
            <Setter Property="StrokeShape" Value="RoundRectangle 18" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#F3F4F6, Dark=#1F2937}" />
            <Setter Property="Padding" Value="16,12" />
        </Style>
    </ContentPage.Resources>

    <Grid Padding="20,14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="0,6">
            <Image Source="logo_256.png" HeightRequest="36" WidthRequest="36" Aspect="AspectFit" />
            <VerticalStackLayout Grid.Column="1" Spacing="0" Padding="10,0">
                <Label Text="iCard Irian Supermarket" FontSize="18" FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#111827, Dark=White}" />
                <Label Text="Member App" FontSize="12" Opacity="0.7"
                       TextColor="{AppThemeBinding Light=#6B7280, Dark=#94A3B8}" />
            </VerticalStackLayout>
            <Image Grid.Column="2" Source="whatsapp.png" HeightRequest="32" WidthRequest="32">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnWhatsAppTapped"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>

        <!-- BODY -->
        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout Spacing="18" Padding="0,14,0,10">

                <!-- KARTU MEMBER -->
                <controls:AspectRatioContainer Ratio="0.628125" MaxWidth="780" HorizontalOptions="Center">
                    <Border StrokeThickness="0" StrokeShape="RoundRectangle 12">
                        <Image Source="member_card_1200.jpg" Aspect="AspectFit" />
                    </Border>
                </controls:AspectRatioContainer>

                <!-- INFO MEMBER DI BAWAH KARTU -->
                <Grid ColumnDefinitions="*,Auto" Padding="6,4,6,0">
                    <VerticalStackLayout Spacing="2">
                        <Label x:Name="lblMemberName" Text="Agung Pratama"
                               FontSize="16" FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#111827, Dark=White}"/>
                        <Label x:Name="lblCardNo" Text="Card No: 9988 6655 2211"
                               FontSize="12" TextColor="{AppThemeBinding Light=#6B7280, Dark=#94A3B8}"/>
                    </VerticalStackLayout>
                    <Label x:Name="lblValid" Grid.Column="1" Text="Valid thru 12/2026"
                           FontSize="12" TextColor="{AppThemeBinding Light=#6B7280, Dark=#94A3B8}"
                           HorizontalOptions="End" VerticalOptions="Center"/>
                </Grid>

                <!-- PANEL: POINTS & SHOW BARCODE (tinggi 60) -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10" HeightRequest="60">
                    <!-- Points -->
                    <Border StrokeThickness="0" StrokeShape="RoundRectangle 12"
                            BackgroundColor="{AppThemeBinding Light=#F3F4F6, Dark=#1F2937}" Padding="12,6">
                        <Grid RowDefinitions="Auto,Auto" RowSpacing="0" VerticalOptions="Center">
                            <Label Grid.Row="0" Text="Total Points" FontSize="12"
                                   LineBreakMode="NoWrap"
                                   TextColor="{AppThemeBinding Light=#111827, Dark=White}" />
                            <Label Grid.Row="1" x:Name="lblPoints" Text="1250" FontSize="18" FontAttributes="Bold"
                                   LineBreakMode="NoWrap"
                                   TextColor="{AppThemeBinding Light=#111827, Dark=White}" />
                        </Grid>
                    </Border>

                    <!-- Show Barcode -->
                    <Border Grid.Column="1" StrokeThickness="0" StrokeShape="RoundRectangle 12"
                            BackgroundColor="#10B981" Padding="12,6">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8"
                              VerticalOptions="Center" HorizontalOptions="Center">
                            <Image Source="barcode_icon_white.png" HeightRequest="24" WidthRequest="24" />
                            <Label Grid.Column="1" Text="Show Barcode" FontSize="14" FontAttributes="Bold"
                                   TextColor="White" VerticalTextAlignment="Center" />
                        </Grid>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnShowBarcode"/>
                        </Border.GestureRecognizers>
                    </Border>
                </Grid>

                <!-- PROMOTIONS -->
                <Label Text="Promotions" FontSize="16" FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#111827, Dark=White}" />

                <VerticalStackLayout Spacing="6" Padding="0,0,0,16">
                    <CarouselView x:Name="carousel"
                                  HeightRequest="200"
                                  VerticalOptions="Start"
                                  PeekAreaInsets="24"
                                  IsSwipeEnabled="True"
                                  IndicatorView="{x:Reference indicator}">
                        <CarouselView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="12" />
                        </CarouselView.ItemsLayout>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Border StrokeThickness="0" StrokeShape="RoundRectangle 12">
                                    <Image Source="{Binding Image}" Aspect="AspectFill"/>
                                </Border>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <IndicatorView x:Name="indicator"
                                   IndicatorColor="#D1D5DB"
                                   SelectedIndicatorColor="#10B981"
                                   HorizontalOptions="Center" />
                </VerticalStackLayout>

                <BoxView HeightRequest="12" Opacity="0" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
