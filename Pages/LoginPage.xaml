<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemberCard.Pages.LoginPage"
             Title="Login"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False">

    <!-- Pakai Grid agar footer benar-benar di bawah -->
    <Grid RowDefinitions="*,Auto" Padding="24">

        <!-- Konten utama di-scroll kalau layar kecil -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="16">
                <!-- Logo aplikasi di header -->
                <Image Source="logo.png" HeightRequest="120" HorizontalOptions="Center"/>
                <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>

                <!-- Tombol utama: Masuk (primary) -->
                <Button Text="Masuk" Clicked="OnLoginClicked"/>

                <!-- Masuk dengan Kartu Member: jadikan tombol filled -->
                <Button Text="Masuk dengan Kartu Member"
                BackgroundColor="{StaticResource AccentColor}"
                TextColor="White"
                Clicked="OnLoginWithCard"/>

                <!-- Daftar member baru: tombol filled secondary -->
                <Button Text="Daftar Member Baru"
                BackgroundColor="{StaticResource SecondaryColor}"
                TextColor="White"
                Clicked="OnRegister"/>

                <!-- (Opsional dev) Skip demo -->
                <Button Text="Skip (Demo)"
                BackgroundColor="Transparent"
                TextColor="{StaticResource SecondaryColor}"
                Clicked="OnSkip"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer: versi di tengah & paling bawah, lalu credit desain di paling bawah -->
        <StackLayout Grid.Row="1" Spacing="2" Padding="0,8"
                 HorizontalOptions="Center" VerticalOptions="End">
            <Label x:Name="VersionText" FontSize="12" Opacity="0.7"
             HorizontalTextAlignment="Center"/>
            <Label Text="Designed By Affari Retail System"
               FontSize="12"
               Opacity="0.7"
               TextDecorations="Underline"
               TextColor="{StaticResource SecondaryColor}"
               HorizontalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnDesignerTapped"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>

    </Grid>
</ContentPage>